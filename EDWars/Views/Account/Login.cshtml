@model EDWars.Models.LoginModel

<div class="col-lg-offset-3 col-lg-6">
    
    @using (Ajax.BeginForm("Login", "Account", new AjaxOptions {HttpMethod = "POST", InsertionMode = InsertionMode.Replace, OnFailure = "alertify.success('We could not log you in');", UpdateTargetId = "campaign-area"}, new {@enctype = "multipart/form-data", @id = "regForm"}))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <div class="form-group wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
            @Html.LabelFor(m => m.UserName) <br/>
            @Html.EditorFor(model => model.UserName, new {htmlAttributes = new {@placeholder = "username", @class = "form-control"}})
        </div>

        <div class="form-group wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
            @Html.LabelFor(m => m.Password)<br/>
            @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@placeholder = "Password", @class = "form-control"}})
        </div>
        <input type="submit" value="Login" class="btn btn-success btn-block wow fadeInUp" data-wow-delay=".3s"/>
    }
</div>
